label
	font-weight bold

small
	font-size 1.4rem

input
textarea
select
	margin 8px 0
	padding 6px
	border 2px solid #ccc
	background #fff
	width 100%
	font-family 'Inconsolata', monospace
	font-size inherit
	color #000
	transition all .2s

	&[type='submit']
	&:focus
		border-color #000

input[type='checkbox']
	width auto
	display none

	& + label
		position relative
		display block
		font-weight normal

	& + label::before
		margin-right 6px
		width 20px
		height 20px
		background-color #fff
		content ''
		display inline-block
		border 2px solid #000
		vertical-align bottom

	& + label::after
		content '\2713'
		color #000
		font-size 20px
		transform scale(0)
		position absolute
		left 2px
		top 2px
		transition all .2s
		vertical-align bottom

	&:checked + label::after
		transform scale(1)

input[type='radio']
	width auto
	display none

	& + label
		position relative
		display block
		font-weight normal

	& + label::before
		margin-right 6px
		width 20px
		height 20px
		background-color #fff
		content ''
		display inline-block
		border 2px solid #000
		vertical-align bottom
		border-radius 50%
		transition all .2s

	&:checked + label::before
		background-color #000
		box-shadow inset 0 0 0 3px #fff

input[type='submit']
	border-radius 16px
	background-color transparent
	width auto
	font-weight bold

	&:hover
		cursor pointer
		background-color #000
		color #fff

textarea
	height 260px
